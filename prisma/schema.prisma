generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model orders {
  // iid           Int             @id @unique @default(autoincrement())
  id            String?
  flightNumber  String?
  destination   String?
  origin        String?
  crew          Json?
  bookingInfo   Json?
  orderNo       String          @unique
  orderPayments orderPayments[]
}

model orderPayments {
  id            String   @unique
  invoiceId     String?
  amount        Int?
  cardNo        String?
  referenceId   String?
  status        String
  reason        String?
  source        String?
  paymentType   String?
  timestamp     DateTime
  Id            String
  orderNo       String?
  orders        orders?  @relation(fields: [ordersOrderNo], references: [orderNo])
  ordersOrderNo String?
}
