generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model orders {
  id           String?
  flightNumber String?
  destination  String?
  origin       String?
  crew         Json?
  bookingInfo  Json?
  orderNo      String  @unique
  // orderPayments orderPayments[]
  // orderPayments orderPayments[]
}

model orderPayments {
  iid         Int      @id @default(autoincrement())
  id          String   @unique
  invoiceId   String?
  amount      Int?
  cardNo      String?
  referenceId String?
  status      String
  reason      String?
  source      String?
  paymentType String?
  timestamp   DateTime
  Id          String
  orderNo     String
  //   orders      orders?  @relation(fields: [orderNo], references: [orderNo])
  //   orderNo     String
  // }
}
