// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model orders {
  iid          String  @id @unique
  flightNumber String
  bookingInfo  Json
  crew         Json
  sessionid    String?
  totalAmount  Float?
  date         String
  orderno      String?

  @@index([orderno])
  @@index([sessionid])
}

model payments {
  id          String   @id @unique
  invoiceId   String?
  cardNo      String
  status      String
  timestamp   DateTime
  amount      Int
  referenceId String?
  source      String
  paymentType String
  reason      String?
  iid         String?
  orderno     String
}

model card {
  id               String  @id @unique
  refno            String  @unique
  merchantName     String?
  merchantCity     String?
  dateTime         String?
  mId              String?
  tId              String?
  custDeviceId     Float?
  tipAmount        Float?
  amount           Float?
  cardNo           String?
  txType           String?
  txStatus         String?
  type             String?
  authNo           BigInt?
  rrNo             Float?
  crType           String?
  batchNo          Float?
  batchTotal       String?
  loginId          Float?
  cardHolderMobile Float?
  cardHolderName   String?
  cardTxnType      String?
  email            String?
  notes            String?
  applicationNo    String?
  folioNo          String?
  schemaType       String?
  subFundName      String?
  clientId         String?
  extraNote1       String?
  extraNote2       String?
  extraNote3       String?
  extraNote4       String?
  extraNote5       String?
  extraNote6       String?
  extraNote7       String?
  extraNote8       String?
  extraNote9       String?
  extraNote10      String?
}

model sessions {
  id   String @unique
  crew Json[]
}

model mswipe {
