// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model orders {
  iid          String  @id @unique
  flightNumber String
  bookingInfo  Json
  crew         Json
  sessionid    String?
  totalAmount  Float?
  date         String
  orderno      String?

  @@index([orderno])
  @@index([sessionid])
}

model payments {
  id          String   @id @unique
  invoiceId   String?
  cardNo      String
  status      String
  timestamp   DateTime
  amount      Int
  referenceId String?
  source      String
  paymentType String
  reason      String?
  iid         String?
  orderno     String
}

model card {
  id                 String  @id @unique
  ref_no             String
  merchant_name      String?
  merchant_city      String?
  date_time          String?
  m_id               String?
  t_id               String?
  cust_device_id     Float?
  tip_amount         Float?
  amount             Float?
  card_no            String?
  tx_type            String?
  tx_status          String?
  type               String?
  auth_no            BigInt?
  rr_no              Float?
  cr_type            String?
  batch_no           Float?
  batch_total        String?
  login_id           Float?
  card_holder_mobile Float?
  card_holder_name   String?
  card_txn_type      String?
  email              String?
  notes              String?
  application_no     String?
  folio_no           String?
  schema_type        String?
  sub_fund_name      String?
  client_id          String?
  extra_note1        String?
  extra_note2        String?
  extra_note3        String?
  extra_note4        String?
  extra_note5        String?
  extra_note6        String?
  extra_note7        String?
  extra_note8        String?
  extra_note9        String?
  extra_note10       String?
}

model sessions {
  id   String @unique
  crew Json[]
}

model mswipe {
  id               Int     @id @default(autoincrement())
  refNo            String?
  merchantName     String?
  merchantCity     String?
  dateTime         String?
  mId              String?
  tId              String?
  custDeviceId     Float?
  tipAmount        Float?
  amount           Float?
  cardNo           String?
  txType           String?
  txStatus         String?
  type             String?
  authNo           BigInt?
  rrNo             Float?
  crType           String?
  batchNo          Float?
  batchTotal       String?
  loginId          Float?
  cardHolderMobile Float?
  cardHolderName   String?
  flightNumber     String?
  pnr              String?
  mobile           String?
  seatNumber       String?
  customerName     String?
  sessionId        String?
  totalAmount      Float?
  date             String?
  orderNo          String?
  email            String?
  crew_1_Id        BigInt?
  crew_1_Name      String?
  crew_1_Position  String?
  crew_1_Code      String?
  crew_2_Id        BigInt?
  crew_2_Name      String?
  crew_2_Position  String?
  crew_2_Code      String?
  crew_3_Id        BigInt?
  crew_3_Name      String?
  crew_3_Position  String?
  crew_3_Code      String?
  crew_4_Id        BigInt?
  crew_4_Name      String?
  crew_4_Position  String?
  crew_4_Code      String?
  extraNote1       String?
  extraNote2       String?
  extraNote3       String?
  extraNote4       String?
  extraNote5       String?
  extraNote6       String?
  extraNote7       String?
  extraNote8       String?
  extraNote9       String?
  extraNote10      String?
}
