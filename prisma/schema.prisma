// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model orders {
  iid          Int    @id @unique @default(autoincrement())
  id           String
  flightNumber String
  crew         Json
  bookingInfo  Json
  destination  String
  origin       String
  orderno      String @unique
}

model payments {
  id          String   @id @unique @default(uuid())
  paymentId   String?
  invoiceId   String?
  cardNo      String
  status      String
  timestamp   DateTime
  amount      Int
  referenceId String?
  source      String
  paymentType String
  reason      String?
  iid         String?
  orderno     String
}
